@model CarSee.ViewModels.CarListingViewModel

@{
    ViewData["Title"] = "Car";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>

<form asp-controller="Car" asp-action="Index" method="get">
    <p>
        Car Name : <input type="text" name="carName" value="@Model.SearchParam" />
        <input type="submit" value="Filter" />
    </p>
</form>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CarList.SingleOrDefault().Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CarList.SingleOrDefault().Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CarList.SingleOrDefault().Brand)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CarList.SingleOrDefault().ProductionYear)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CarList.SingleOrDefault().Condition)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CarList.SingleOrDefault().Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CarList.SingleOrDefault().Mileage)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.CarList)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Brand)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ProductionYear)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Condition)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Mileage)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<div>
    @for (int i = 1; i <= Model.PageCount; i++)
    { 
        @if (i != Model.CurrentPageIndex)
        {
            <a asp-action="Index" asp-controller="Car" asp-route-page="@i" asp-route-carName="@Model.SearchParam"> @i</a>
        }
        else
        {
            <span>@i</span>
        }
    }
</div>
